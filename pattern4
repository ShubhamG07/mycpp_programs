/* Print the following pattern for the given number of rows.
Pattern for N = 4
   1
  212
 32123
4321234
Input format : N (Total no. of rows)

Output format : Pattern in N lines */

//Our Program Starts From Here

#include<iostream>
using namespace std;

int main(){
 int N;
 cin>>N;
 for (int i=1;i<=N;i++){
   for(int k=N-i; k>=1;k--){
     cout<<' ';
 }
 for(int l=i;l>1;l--){
   cout<<l;
 }
 for(int j=1;j<=i;j++){
   cout<<j;
 }
 cout<<endl;

  
} }

